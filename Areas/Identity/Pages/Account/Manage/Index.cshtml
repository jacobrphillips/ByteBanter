@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="container">
    <h3>@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row d-flex justify-content-center align-content-center">
        <div class="col-md-6">
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <br/>
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <label>Select Image</label>
                    <div class="custom-file">
                        <input asp-for="Input.Image" type="file" class="form-control-file custom-file-input" accept=".png,.jpg,.bmp,.jpeg,.tiff" />
                        <label asp-for="Input.Image" class="control-label custom-file-label"></label>
                    </div>
                </div>
                <br/>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-dark">Save</button>
                <br/>
            </form>
        </div>
        <div class="col-md-6">
            <img src="@Model.CurrentImage" class="img-fluid rounded-circle" width="90%"/>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
