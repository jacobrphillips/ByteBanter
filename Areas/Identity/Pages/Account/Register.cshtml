@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container">
    <div class="row d-flex justify-content-center align-content-center">
        <div class="col-6">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                <h2 class="mt-4">Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Input.DisplayName"></label>
                    <input asp-for="Input.DisplayName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Input.ImageFile"></label>
                    <input asp-for="Input.ImageFile" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label>Select Image</label>
                    <div class="custom-file">
                        <input asp-for="Input.ImageFile" type="file" class="form-control-file custom-file-input" accept=".png,.jpg,.bmp,.jpeg,.tiff"/>
                        <label asp-for="Input.ImageFile" class="control-label custom-file-label"></label>
                    </div>
                </div>*@
                <br />
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <br />
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-dark">Register</button
                    <br />
            </form>
            <br />
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
