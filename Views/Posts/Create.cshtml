@using ByteBanter.Enums;
@model ByteBanter.Models.Post

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row d-flex justify-content-center align-content-center">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <h1 class="my-4">Create Post</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="BlogId" class="control-label"></label>
                    <select asp-for="BlogId" class="form-control" asp-items="ViewBag.BlogId"></select>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Abstract" class="control-label"></label>
                    <textarea asp-for="Abstract" class="form-control"></textarea>
                    <span asp-validation-for="Abstract" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="5" id="summernote"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" asp-for="Image" class="form-control" />
                    <span asp-validation-for="ImageData" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label class="control-label">Manage Tags</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <input type="text" class="form-control mb-3" id="TagEntry" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button name="Add" type="button" class="btn btn-dark btn-sm w-100">Add</button>
                                </div>
                                <div class="col-6">
                                    <button name="Delete" type="button" class="btn btn-dark btn-sm w-100">Delete</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <select class="w-100" name="TagValues" id="TagList" multiple></select>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="ReadyStatus" class="control-label"></label>
                    <select asp-for="ReadyStatus" asp-items="@Html.GetEnumSelectList<ReadyStatus>()" class="form-control"></select>
                    <span asp-validation-for="ReadyStatus" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group d-grid">
                    <input type="submit" value="Create" class="btn btn-dark" />
                </div>
                <br />
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
        });
    </script>
}